{
  "name": "local-state-sync",
  "version": "0.0.0-semantically-released",
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "git-emails-arent-for-marketing@47ng.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/local-state-sync"
  },
  "keywords": [
    "encrypted",
    "state",
    "sync",
    "tabs",
    "reload",
    "localStorage",
    "StorageEvent"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest --coverage",
    "prebuild": "rm -rf ./dist",
    "build:typecheck": "tsc",
    "build:transpile": "unbuild",
    "build": "run-p build:*",
    "size": "size-limit",
    "ci": "run-s test build size",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.1.0",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.7",
    "commitlint": "^17.1.2",
    "husky": "8.x",
    "jest": "^29.2.1",
    "jest-environment-jsdom": "^29.2.2",
    "npm-run-all": "^4.1.5",
    "size-limit": "^8.1.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "unbuild": "^0.9.4"
  },
  "size-limit": [
    {
      "path": "./dist/index.mjs",
      "limit": "1.5 KB"
    }
  ],
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  }
}
